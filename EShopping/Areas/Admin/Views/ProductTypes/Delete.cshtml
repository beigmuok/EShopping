@model ProductType

@{
	ViewData["Title"] = "Delete";
}


@*<div class="cd-flex form-control"> *@
<div class="col-md-6 offset-md-3"> 
	<div class="form-control rounded">
		@*<div class="col-6 rounded form-control"> *@

<h2 class="align-content-center text-info"> Delete of Type </h2>

<form asp-action="Delete" id="delete-form" method="post">
	<div class="cd-flex rounded">
		<input type="hidden" asp-for="Id" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group row">
			<div class="col-3 ml-3">
				<label asp-for="TypeName"></label>
			</div>
			<div class="d-inline">
				<input asp-for="TypeName" class="form-control mt-2" placeholder="E.g. Men's Clothing ..."></input>
				<span asp-validation-for="TypeName" class="text-danger"></span>
			</div>

			<div class="form-group mt-3">

				<a asp-action="Index" class="btn btn-success float-end"> Back To List</a>
				@*<input type="Submit" Id="" class="btn btn-danger float-end" value="Delete"> Confirm Delete</a>*@
				<input type="button" id="btn-submit" class="btn btn-danger float-end" value="Confirm Delete"> </input>
			</div> 
		</div>
	</div>


</form>
</div>
</div>

@section scripts{

<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
<script type="text/javascript">
	$(document).ready(function()
	{
		@*//your button click code*@
		$("#btn-submit").on("click", function(event){
			event.preventDefault();
			alertify.confirm("Confirm Deleting Product Type?", function(e){
				if (e) {
					$("#delete-form").submit();
					alertify.success("Product Type Name was deleted successfully.")
					return true;
				} else {
						alertify.error("Product Type Name  deleting failed");
					return false;
				}
			});
		});
	});


	</script>
}


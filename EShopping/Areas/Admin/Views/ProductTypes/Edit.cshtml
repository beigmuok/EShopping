@model ProductType

@{
	ViewData["Title"] = "Edit Product Type";
}

@*<div class="cd-flex form-control"> *@
<div class="col-md-6 offset-md-3"> 
	<div class="form-control rounded">
	@*<div class="col-6 rounded form-control"> *@
	
<h2 class="align-content-center text-info"> Edit Products </h2>

<form asp-action="Edit" method="post" id="edit-form">
	<div class="cd-flex rounded">
		<input type="hidden" asp-for="@Model.Id" />
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group row">
			<div class="col-3 ml-3">
				<label asp-for="TypeName"></label>
			</div>
			<div class="d-inline">
				<input asp-for="TypeName" class="form-control mt-2" placeholder="E.g. Men's Clothing ..."></input>
				<span asp-validation-for="TypeName" class="text-danger"></span>
			</div>

			<div class="form-group mt-3">
				
				<a asp-action="Index" class="btn btn-success float-end"> Back To List</a>
				<input type="button" class="btn btn-primary " value="Update" id="btn-submit" />
			</div>
		</div>
	</div>


</form>
</div>
</div>

@section scripts{
	@{ await Html.RenderPartialAsync("_validationScriptsPartial");}
 
		<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
		<script type="text/javascript">
			$(document).ready(
				function()
			{
		    @*//your button click code*@
				$("#btn-submit").on("click", function(event){
					event.preventDefault();				 
						alertify.confirm('Confirmation Dialog','Confirm updating a new Product Type', function(e){
						if (e) {
								$("#edit-form").submit();
								alertify.success("Product Type Name was updated successfully.")
								return true;
							} else {
									alertify.error("Product Type Name updating failed");
								return false;
							}
						}
						,function(e){ alertify.error('User Cancelled Request')});
				});
			});

	</script>


}
@model ProductType

@{
	ViewData["Title"] = "New Product Type";
}

@*<div class="cd-flex form-control"> *@
<div class="col-md-6 offset-md-3"> 
	<div class="form-control rounded">
	@*<div class="col-6 rounded form-control"> *@
	
<h2 class="align-content-center text-info"> New Products Type</h2>

<form asp-action="Create" method="post" id="create-form">
	<div class="cd-flex rounded">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group row">
			<div class="col-3 ml-3">
				<label asp-for="TypeName"></label>
			</div>
			<div class="d-inline">
				<input asp-for="TypeName" class="form-control mt-2" placeholder="E.g. Men's Clothing ..."></input>
				<span asp-validation-for="TypeName" class="text-danger"></span>
			</div>

			<div class="form-group mt-3">
				
				<a asp-action="Index" class="btn btn-success float-end"> Back To List</a>
				<input type="button" class="btn btn-primary " value="Save" id="btn-submit" />
			</div>
		</div>
	</div>


</form>
</div>
</div>

@section scripts{
	@{
		await Html.RenderPartialAsync("_validationScriptsPartial");
	}
	<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
	<script type="text/javascript">

		

		$(document).ready(function()
		{
		@*//your button click code*@
			$("#btn-submit").on("click", function(event){
				event.preventDefault();				 
					alertify.confirm('Confirmation Dialog','Confirm Creating a new Product Type', function(e){
					if (e) {
						$("#create-form").submit();
							//alertify.success("Product Type Name was created successfully.")
							return true;
						} else {
								alertify.error("Error occured");
							return false;
						}
				    }
					,function(e){ alertify.error('User Cancelled Request')});

			});
		});


</script>
}

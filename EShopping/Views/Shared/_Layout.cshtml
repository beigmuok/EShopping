    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EShopping</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="UI" asp-controller="Product" asp-action="Index"> Products</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-gear"></i>
                                Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                                <li> <a class="dropdown-item" asp-area="Admin" asp-controller="Products" asp-action="Index"> <i class="bi bi-camera-reels"></i> Products </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li> <a class="dropdown-item" asp-area="Admin" asp-controller="ProductTypes" asp-action="Index"> <i class="bi bi-headset"></i> Porduct Types </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li> <a class="dropdown-item" asp-area="Admin" asp-controller="ProductTags" asp-action="Index"> <i class="bi bi-person-square"></i> Product Tags </a></li>
                            </ul>
                        </li>

                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="ProductTypes" asp-action="Index"> Products Types </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="ProductTags" asp-action="Index">Product Tags</a>
                        </li>*@
                    </ul>
                    <form class="d-flex" asp-controller="Movies" asp-action="Filter" style="padding-right:25px;">
                        <input name="searchString" type="text" class="form-control" placeholder="Search for a Product ... " />
                        <button class="btn btn-outline-success my-2 my-sm-0" type ="submit"> <i class="bi bi-search"></i> </button>
                    
                    </form>
                    
                    <ul class="navbar-nav">
                        <li class="nav-item">
                           @* <a class="nav-link text-danger" asp-area="UI" asp-controller="Product" asp-action="Cart"> <i class="bi-cart-plus-fill"></i> (@count) </a>*@

                            <partial name="CartPartial" />

                        </li>
                     </ul>

                    <partial name="_LoginPartial" />
                </div>
                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <partial name="footer" />
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EShopping - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/cartloader.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
